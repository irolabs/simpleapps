<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/output"
        android:fontFamily="@font/cairo_reguler"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/output"
        android:textStyle="bold"
        android:fontFamily="@font/cairo_bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:maxLines="2"/>

    <EditText
        android:id="@+id/edtInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/input_primary"
        android:fontFamily="@font/cairo_reguler"
        android:paddingStart="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/input"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnReverse"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/btnprimary"
            android:textColor="@color/bluePrimary"
            android:text="@string/reverse"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnUnRe"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textColor="@color/white"

            android:background="@drawable/btnsecondary"
            android:text="@string/undo_redo"/>

    </LinearLayout>


</LinearLayout>